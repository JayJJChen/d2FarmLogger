{
  "name": "d2-farm-logger",
  "version": "1.0.0",
  "description": "Diablo 2 Farm Logger WeChat Mini-Program",
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "build:prod": "npm run clean && npm run build && npm run deploy",
    "clean": "rimraf build",
    "deploy": "xcopy /E /I /Y build\\* miniprogram\\",
    "type-check": "tsc --noEmit",
    "prepare": "npm run build"
  },
  "keywords": [
    "wechat",
    "miniprogram",
    "diablo2",
    "farm",
    "logger"
  ],
  "author": "",
  "license": "",
  "devDependencies": {
    "miniprogram-api-typings": "^2.8.3-1",
    "rimraf": "^5.0.10",
    "typescript": "^5.9.3"
  }
}
