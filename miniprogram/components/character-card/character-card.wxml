<view class="swipe-container">
  <view
    class="character-card {{isSliding ? 'sliding' : ''}}"
    style="transform: translateX({{translateX}}rpx);"
    bindtouchstart="onTouchStart"
    bindtouchmove="onTouchMove"
    bindtouchend="onTouchEnd"
  >
    <view class="character-info">
      <text class="character-name">{{displayInfo}}</text>
    </view>
    <view class="character-actions">
      <button class="action-btn edit-btn" bindtap="onEditTap">编辑人物</button>
      <button class="action-btn config-btn" bindtap="onConfigTap">配置场景</button>
      <button class="action-btn start-btn" bindtap="onStartSessionTap">开始记录</button>
    </view>
  </view>
  <view class="delete-btn-container" bindtap="onDeleteTap">
    <text class="delete-btn-text">删除</text>
  </view>
</view>